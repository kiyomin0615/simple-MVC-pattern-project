<%- include('includes/head.ejs', { title: 'Login' }) %>
  <link rel="stylesheet" href="/css/forms.css">
  <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
  <%- include('includes/header.ejs') %>
  <main id="login">
    <h1>로그인</h1>
    <% if (sessionInputData.hasError) { %>
      <p id="input-error"><%= sessionInputData.message %></p>
    <% } %>
    <form action="/login" method="POST">
      <input type="hidden" value="<%= csrfToken %>" name="_csrf">
      <div class="form-control">
        <label for="email">Email</label>
        <input type="email" id="email" name="email" value="<%= sessionInputData.email %>" required>
      </div>
      <div class="form-control">
        <label for="password">비밀번호</label>
        <input type="password" id="password" name="password" value="<%= sessionInputData.password %>" required>
      </div>
      <button class="btn">로그인</button>
    </form>
    <div id="auth-alt">
      <a class="btn btn-alt" href="/signup">회원가입 하기</a>
    </div>
  </main>
</body>